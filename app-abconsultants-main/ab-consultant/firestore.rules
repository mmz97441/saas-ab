rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =============================================
    // HELPER FUNCTIONS
    // =============================================
    function isAuthenticated() {
      return request.auth != null;
    }

    function isConsultant() {
      return isAuthenticated() && request.auth.token.role == 'consultant';
    }

    function isAdmin() {
      return isConsultant() && request.auth.token.isAdmin == true;
    }

    function isOwnerClient(clientId) {
      return isAuthenticated()
        && request.auth.token.role == 'client'
        && request.auth.token.clientId == clientId;
    }

    function isClient() {
      return isAuthenticated() && request.auth.token.role == 'client';
    }

    // =============================================
    // CLIENTS COLLECTION
    // =============================================
    match /clients/{clientId} {
      allow read: if isAuthenticated();
      allow create: if isConsultant() || isAuthenticated();
      allow update: if isConsultant() || isAuthenticated();
      allow delete: if isAdmin();
    }

    // =============================================
    // RECORDS COLLECTION (Financial Data)
    // =============================================
    match /records/{recordId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isConsultant() || isAuthenticated();
    }

    // =============================================
    // CONSULTANTS COLLECTION (Team Management)
    // =============================================
    match /consultants/{consultantId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin() || isAuthenticated();
    }

    // =============================================
    // CONVERSATIONS & MESSAGES (Chat)
    // =============================================
    match /conversations/{clientId} {
      allow read, write: if isAuthenticated();

      match /messages/{messageId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow update, delete: if false;
      }
    }

    // =============================================
    // MAIL COLLECTION
    // =============================================
    match /mail/{mailId} {
      allow create: if isAuthenticated();
      allow read, update, delete: if false;
    }

    // =============================================
    // DEFAULT: Deny everything else
    // =============================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
